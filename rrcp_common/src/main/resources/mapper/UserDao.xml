<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rrcp.common.dao.UserDao">

    <select id="queryByPhone" resultType="com.rrcp.common.entity.User">
		SELECT *
		FROM _user
		WHERE 
		user_phone= #{userPhone} limit 1
	</select>

    <select id="queryAll" resultType="com.rrcp.common.entity.User">
		SELECT *
		FROM _user
		ORDER BY create_time DESC
		limit #{offset},#{limit}
	</select>


    <update id="addScore">
		UPDATE _user 
		SET 
		score = score + #{add}
	</update>

</mapper>